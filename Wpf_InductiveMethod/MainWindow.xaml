<Window x:Class="Wpf_InductiveMethod.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_InductiveMethod"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1000">
    <Grid Margin="0,0,0,0">
        <Image x:Name="image1" HorizontalAlignment="Left" Height="600" Margin="10,10,0,0" VerticalAlignment="Top" Width="600" MouseLeftButtonDown="Image1_MouseLeftButtonDown" MouseLeftButtonUp="Image1_MouseLeftButtonUp" MouseMove="Image1_MouseMove"/>
        <Button Content="Start" HorizontalAlignment="Left" Margin="615,10,0,0" VerticalAlignment="Top" Width="144" Click="Button_start_Click" Height="145" FontSize="16"/>
        <Button x:Name="btn_replay" Content="replay" HorizontalAlignment="Left" Margin="764,10,0,0" VerticalAlignment="Top" Width="75" Height="145" Click="Btn_replay_Click" FontSize="16"/>
        <Button x:Name="btn_check" Content="check" HorizontalAlignment="Left" Margin="615,175,0,0" VerticalAlignment="Top" Width="144" Height="36" Click="Btn_check_Click" FontSize="16"/>
        <TextBlock x:Name="tb_checkNum" HorizontalAlignment="Left" Margin="764,182,0,0" TextWrapping="Wrap" Text="Gen : 0" VerticalAlignment="Top" FontSize="16"/>
        <TextBox x:Name="tb_replay_Gen" HorizontalAlignment="Left" Height="23" Margin="844,10,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="57" TextAlignment="Center" VerticalContentAlignment="Center" FontSize="16"/>
        <Button x:Name="btn_replay_all" Content="replay all" HorizontalAlignment="Left" Margin="844,112,0,0" VerticalAlignment="Top" Width="75" Height="43" FontSize="16" Click="Btn_replay_all_Click"/>
        <Button x:Name="btn_countKeyPoint" Content="Count key point" HorizontalAlignment="Left" Margin="844,168,0,0" VerticalAlignment="Top" Width="111" Height="43" Click="Btn_countKeyPoint_Click" FontSize="14"/>

    </Grid>
</Window>
